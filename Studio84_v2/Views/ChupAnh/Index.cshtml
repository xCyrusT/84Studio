
@{
    ViewBag.Title = "Index";
}

<style>
    .site-content .heading-title::before {
        content: "";
        position: absolute;
        top: 3px;
        left: 0;
        width: 20px;
        height: 20px;
        background: url(../assets/img/icon/icon-header.png) center center no-repeat;
        background-size: cover;
    }

    .nupacachi-content {
        margin-top: 25px;
    }

        .nupacachi-content .panel .panel-heading {
            background-color: #ffffff !important;
        }

            .nupacachi-content .panel .panel-heading a {
                color: #886244;
            }

    #img-before {
        margin-bottom: 5px;
        margin-right: 5px;
    }
</style>

<div class="container">
    <div class="breadcrumbs-top">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chụp ảnh</li>
            </ol>
        </nav>
    </div>

    @if (ViewBag.LstCategory.Count > 0)
    {
        foreach (var item in ViewBag.LstCategory)
        {
            <div class="panel">
                <div class="panel-heading">
                    <div class="left">
                        <a href="" class="heading-title"><img src="~/assets/img/icon/icon-header.png" id="img-before" />@item.Title</a>
                    </div>
                    <div class="right"><a href="/ChupAnh/Category?id=@item.Id"><i class="fa fa-plus" aria-hidden="true"></i> Xem thêm</a></div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @if (item.LstChild.Count < 3)
                        {
                            foreach (var item2 in item.LstChild)
                            {
                                <div class="col-md-4">
                                    <div class="member-item">
                                        <div class="item wow fadeInRight">
                                            <div class="item-img">
                                                <a href="">
                                                    <img class="" src="@item2.ThumbPath" alt="">
                                                </a>
                                                <div class="item-content">
                                                    <div class="content"><a href="">@item2.Title</a></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 3; i++)
                            {
                                <div class="col-md-4">
                                    <div class="member-item">
                                        <div class="item wow fadeInRight">
                                            <div class="item-img">
                                                <a href="">
                                                    <img class="" src="@item.LstChild[i].ThumbPath" alt="">
                                                </a>
                                                <div class="item-content">
                                                    <div class="content"><a href="">@item.LstChild[i].Title</a></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>
