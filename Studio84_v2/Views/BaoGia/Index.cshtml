
@{
    ViewBag.Title = "Index";
}

<style>
    .site-content .heading-title::before {
        content: "";
        position: absolute;
        top: 3px;
        left: 0;
        width: 20px;
        height: 20px;
        background: url(../assets/img/icon/icon-header.png) center center no-repeat;
        background-size: cover;
    }

    .nupacachi-content {
        margin-top: 25px;
    }

        .nupacachi-content .panel .panel-heading {
            background-color: #ffffff !important;
        }

            .nupacachi-content .panel .panel-heading a {
                color: #886244;
            }

    #img-before {
        margin-bottom: 5px;
        margin-right: 5px;
    }
</style>

<div class="container">
    <div class="breadcrumbs-top">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Báo giá</li>
            </ol>
        </nav>
    </div>

    <div class="panel">
        <div class="panel-body">
            <div class="row">
                @foreach (var item in ViewBag.LstCategory)
                {
                    <div class="col-md-4">
                        <div class="member-item">
                            <div class="item wow fadeInRight">
                                <div class="item-img">
                                    <a href="">
                                        <img class="" src="@item.ThumbPath" alt="">
                                    </a>
                                    <div class="item-content">
                                        <div class="content"><a href="/BaoGia/Detail?id=@item.Id">@item.Title</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3 class="text-center"><a href="/BaoGia//Detail?id=@item.Id">@item.Title</a></h3>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
